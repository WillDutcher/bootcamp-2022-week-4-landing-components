---
const { title } = Astro.props
// const title = Astro.props.title // ALT WAY

const url = new URL(Astro.request.url).pathname
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<title>{ title }</title>
		<script src="https://cdn.tailwindcss.com"></script>
	</head>

	<body class="bg-gray-200">
	
		<div class="py-8">

			<nav class="flex justify-center pb-10 space-x-10 text-3xl text-gray-500 font-medium">
				<a href="/"	class={url === '/' ? 'text-purple-500 hover:text-purple-700 ease-in-out duration-500 font-extrabold' :
					'hover:text-purple-500 ease-in-out duration-500'}>Home</a>
				<a href="/pricing" class={url === '/pricing' ? 'text-purple-500 hover:text-purple-700 ease-in-out duration-500 font-extrabold' :
					'hover:text-purple-500 ease-in-out duration-500'}>Pricing</a>
				<a href="/blog"	class={url === '/blog' ? 'text-purple-500 hover:text-purple-700 ease-in-out duration-500 font-extrabold' :
					'hover:text-purple-500 ease-in-out duration-500'}>Blog</a>
				<a href="/login" class={url === '/login' ? 'text-purple-500 hover:text-purple-700 ease-in-out duration-500 font-extrabold' :
					'hover:text-purple-500 ease-in-out duration-500'}>Login</a>
				<a href="/signup"	class="bg-blue-500 hover:bg-blue-800 ease-in-out duration-500 text-white font-bold px-3 py-2 -mt-2 rounded-full hover:text-yellow-100 ">Sign Up</a>
			</nav>

			<h1 class="mt-10 text-center text-3xl mb-10 font-extrabold tracking-tight text-gray-900">
				{ title }
			</h1>

			<div class="mt-20 mx-auto text-center max-w-3xl px-10">
				<slot />
			</div>

			<footer class="mt-20 pt-12 border-t-2 border-gray-300">
				<nav class="flex justify-center pb-10 space-x-10">
					<a href="/" class="font-medium text-gray-500 hover:text-gray-900" >Home</a>
					<a href="/pricing" class="font-medium text-gray-500 hover:text-gray-900">Pricing</a>
					<a href="/blog" class="font-medium text-gray-500 hover:text-gray-900">Blog</a>
				</nav>
				<p class="text-center text-gray-400">
					&copy; 2022 Great Tool. All rights reserved.
				</p>
			</footer>
		</div>
	</body>
</html>
